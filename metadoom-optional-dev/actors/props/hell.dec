	Idle:
		TOFL A 1 bright A_Warp(AAPTR_MASTER,0,0,60,0,WARPF_NOCHECKPOSITION|WARPF_INTERPOLATE)
		loop
	Death:
		TNT1 A 0
		stop
	}
}

