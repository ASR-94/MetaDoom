
// Scriptable marine -------------------------------------------------------

ACTOR MetaScriptedMarine : MonsterCore replaces ScriptedMarine
{
	Health 100
	Radius 16
	Height 56
	Mass 100
	Speed 8
	Painchance 160
	MONSTER
	-COUNTKILL
	Translation 0
	Damage 100
	DeathSound "*death"
	PainSound "*pain50"
	Obituary "$OB_MARINE"
	States
	{
	Spawn:
		PLAY A 4 A_Look
		Loop
	See:
		"####" A 0 A_MetaBleed("FlyingBlood")
		"####" ABCD 4 A_Chase
		Loop
	Missile:
		"####" E 12 A_FaceTarget
		Goto See
	SkipAttack:
		"####" A 1
		Goto See
	Pain:
		"####" G 4
		"####" G 4 A_Pain
		Goto See
	Death:
		"####" H 0 A_SpawnItem("SoulSpawner")
		"####" H 10 A_StopSound(CHAN_BODY)
		"####" I 10 A_Scream
		"####" J 10 A_NoBlocking
		"####" K 10
		"####" M 10 A_PlaySound("bodyfalls/medium")
		"####" M 10
		"####" N -1
		Stop
	XDeath:
		"####" O 0 A_SpawnItem("SoulSpawner")
		"####" O 5 A_StopSound(CHAN_BODY)
		"####" # 0 A_Fall
		TNT1 A 0 A_SpawnItemEx("MetaGibber",0,0,0,0,0,0,0,SXF_TRANSFERPOINTERS)
		Stop
	Raise:
		"####" MLKJIH 5
		Goto See
	}
}

