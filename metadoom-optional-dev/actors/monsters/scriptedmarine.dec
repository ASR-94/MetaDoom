ACTOR MetaMarineFist : MetaScriptedMarine replaces MarineFist
{
	Obituary "$OB_MARINE_FIST"
	DropItem "ArmorBonus"
	States
	{
	Spawn:
		PLAF A 4 A_Look
		Loop
	Melee:
		PLAF A 4 A_FaceTarget
		PLAF E 8 A_CustomMeleeAttack((2 * random(1, 10)), "weapons/melee/hitwall", "weapons/melee/wiff", "Default")
		PLAF A 4 A_FaceTarget
		Goto See
	Missile:
		Stop
	}
}


