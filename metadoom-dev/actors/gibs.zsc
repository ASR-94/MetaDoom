// Unidentifiable bloody GOOSH
class MetaSploosh : Actor // edited version of smoothdoom gib1
{
	Default
	{
	Radius 3;
	Height 3;
	Speed 7;
	Scale 1.0;
	Mass 1;
	+NOBLOCKMAP
	+MISSILE
	+NOTELEPORT
	+MOVEWITHSECTOR
	+CLIENTSIDEONLY
	+BLOODLESSIMPACT 
	+DONTSPLASH
	+FLOORCLIP
	Decal "Bloodsmear";
	Gravity 0.7;
	}
	
	States
	{
	Spawn:
		GIBS C 3;
	    Loop;
	Death:
	    TNT1 A 0 A_JumpIf(waterlevel == 2,"Disappear");
		TNT1 A 0 A_PlaySound("effects/blood");
		TNT1 A 0 A_SpawnItem("BloodSplat");
	    Stop;
	Disappear:
		TNT1 A 1;
		stop;
	}
}

