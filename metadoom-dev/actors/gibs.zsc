// Individual Unique Gib Actors
// These abuse ROLLSPRITE because it was new and nobody else was.
class MetaGib1 : Actor
{
	Default
	{
	+DOOMBOUNCE
	PROJECTILE;
	-NOGRAVITY
	//-NOBLOCKMAP
	-ACTIVATEIMPACT
	+NOTELEPORT
	-TELESTOMP
	-SOLID
	+ROLLSPRITE
	+ROLLCENTER
	Radius 2;
	Damage 0;
	Decal "BloodSplat";
	bouncefactor 0.5;
	SeeSound "gibbage/gibphys";
	gravity 0.5;
	Speed 5;
	scale 0.75;
	}
	
	int user_lifetime;
	
	States
	{
	Spawn:
		JIBS A 0;
		goto Setup;
	Setup:
		"####" # 0 ThrustThingZ (0, random(32,45), 0, 1);
		"####" # 0 A_SetRoll(random(0,360));
		"####" # 0 { user_lifetime = 0; }
	ChangeDir:
		"####" # 0 A_Jump(128,"Alt");
		goto See;
	See:
		"####" # 0 A_SpawnItem("FlyingBloodCheap");
		"####" # 0 ThrustThingZ(0,6,1,1);
		"####" # 1 A_SetRoll((roll + 5));
		loop;
	Alt:
		"####" # 0 A_SpawnItem("FlyingBloodCheap");
		"####" # 0 ThrustThingZ(0,6,1,1);
		"####" # 1 A_SetRoll((roll - 5));
		loop;
	Bounce.Floor:
		//"####" # 0 A_SpawnItem("BloodSplat")
		goto ChangeDir;
	Bounce.Wall:
		goto ChangeDir;
	Death:
		"####" # 0 A_ChangeLinkFlags(true); //A_ChangeFlag(NOBLOCKMAP, 0);
	EternalRest:
		"####" # 35 { user_lifetime += 35; }
		"####" # 1 A_JumpIf((user_lifetime >= meta_perf_bloodtime), "FadeMeOut");
		loop;
	FadeMeOut:
		"####" "#" 1 A_FadeOut(0.02);
		Wait;
	}
}

