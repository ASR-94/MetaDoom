// The original. Basically the same as he was in 1993. Possibly earlier.
// TODO: MORE. VARIANTS.

ACTOR MetaDoomImp : MonsterCore
{
	Health 60
	Radius 20
	Height 56
	Mass 100
	Speed 8
	PainChance 200
	Monster
	+FLOORCLIP
	SeeSound "monsters/imp/see"
	PainSound "monsters/imp/pain"
	DeathSound "monsters/imp/die"
	ActiveSound "monsters/imp/idle"
	HitObituary "$OB_IMPHIT"
	Obituary "$OB_IMP"
	painchance HolyWater, 255
	States
	{
	Spawn:
		TROO AB 10 A_Look
		Loop
	See:
		"####" A 0 A_MetaBleed("FlyingBlood")
		TROO AABBCCDD 3 A_Chase
		Loop
	Melee:
	Missile:
		TROO EF 8 A_FaceTarget
		TROO G 6 A_CustomComboAttack("MetaDoomImpBall", 32, 3 * random(1, 8), "monsters/imp/claw")
		Goto See
	Pain:
		TROO H 0
		TROO H 2
		{
			A_ChangeFlag("FRIGHTENED", FALSE);
			A_TakeInventory("ScurredCounter",999);
		}
		TROO H 2 A_Pain
		Goto See
	Pain.HolyWater:
		TROO G 3
		TROO G 3 A_Pain
		Goto Scurred
	Punched:
		TROO G 3 
		TROO G 3
		{
			A_ChangeFlag("FRIGHTENED", FALSE);
			A_TakeInventory("ScurredCounter",999);
		}
		TROO G 12 A_Pain
		Goto See
	Scurred:
		TROO A 0 A_ChangeFlag("FRIGHTENED", TRUE)
	ScurredLoop:
		TROO A 0 A_GiveInventory("ScurredCounter", 1)
		TROO A 2 A_Chase("", "")
		TROO A 2 A_Chase("", "")
		TROO A 0 A_SpawnItem("HolySweat",0,54)
		TROO B 2 A_Chase("", "")
		TROO B 2 A_Chase("", "")
		TROO C 2 A_Chase("", "")
		TROO C 2 A_Chase("", "")
		TROO C 0 A_SpawnItem("HolySweat",0,54)
		TROO D 2 A_Chase("", "")
		TROO D 2 A_Chase("", "")
		TROO D 0 A_JumpIfInventory("ScurredCounter", 6, "ScurredEnd")
		loop
	ScurredEnd:
		TROO D 0
		{
			A_ChangeFlag("FRIGHTENED", FALSE);
			A_TakeInventory("ScurredCounter",999);
		}
		goto See
	Death:
		TROO I 0 A_Jump (128, 2)
		TROO I 0 A_SetScale(-1,1) // random chance of sprite flipping
		TNT1 A 0 A_SpawnItem("SoulSpawner")
		TROO I 8 A_GiveToTarget("ScoreItem", 150)
		TROO J 8 A_Scream
		TROO K 6
		TROO L 6 A_NoBlocking
		TROO M -1 A_PlaySound("bodyfalls/medium")
		Stop
	XDeath:
		TNT1 A 0 A_SpawnItem("SoulSpawner")
		TROO N 5 A_GiveToTarget("ScoreItem", 150)
		TNT1 A 0 A_SpawnItemEx("MetaGibber",0,0,0,0,0,0,0,SXF_TRANSFERPOINTERS)
		Stop
	Raise:
		TROO M 0 A_SetScale(1,1)
		TROO MLKJI 8
		Goto See
	}
}

ACTOR MetaDoomImpBall
{
	Radius 6
	Height 8
	Speed 10
	FastSpeed 20
	Damage 3
	Projectile
	+RANDOMIZE
	RenderStyle Add
	Alpha 1
	SeeSound "monsters/imp/shoot"
	DeathSound "monsters/imp/fireball/hit"
	decal DoomImpScorch
	States
	{
	Spawn:
		BAL1 A 0
		BAL1 A 0 A_PlaySoundEx("monsters/imp/fireball/loop", "Body", 1)
		BAL1 A 0 A_JumpIfInventory("ExtinguisherToken",1,"Extinguished")
		BAL1 A 4 BRIGHT A_SpawnItem ("DoomImpBallEffect", 0, 0, 0, 0)
		BAL1 B 0 A_JumpIfInventory("ExtinguisherToken",1,"Extinguished")
		BAL1 B 4 BRIGHT A_SpawnItem ("DoomImpBallEffect", 0, 0, 0, 0)
		Loop
	Death:
		BAL1 CDE 6 BRIGHT
		Stop
	Extinguished:
		BAL1 A 0 A_PlaySound("monsters/lostsoul/extinguish")
		TNT1 AAAAA 1 A_SpawnItem ("DoomImpBallEffect", 0, 0, 0, 0)
		stop
	}
}

ACTOR DoomImpBallEffect
{
	+NOBLOCKMAP
	+NOGRAVITY
	Radius 0
	Height 1
	Speed 0
	PROJECTILE
	RENDERSTYLE ADD
	ALPHA 0.85
	scale 0.65
	States
	{
	Spawn:
		RPUF A 2 Bright
		RPUF ABCDE 2 Bright
		Stop 
	}
} 

