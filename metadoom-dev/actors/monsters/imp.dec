// Imp Lord - A Doom 4 Imp that is faster and has the teleport trick from the "Doom 4 1.0" footage

ACTOR MetaDoomImpLord : MonsterCore
{
	Health 80
	Radius 20
	Height 56
	Mass 100
	Speed 10
	PainChance 200
	Monster
	+FLOORCLIP
	SeeSound "monsters/implord/see"
	PainSound "monsters/implord/pain"
	DeathSound "monsters/implord/die"
	ActiveSound "monsters/implord/idle"
	HitObituary "$OB_IMPLORDHIT"
	Obituary "$OB_IMPLORD"
	painchance HolyWater, 255
	States
	{
	Spawn:
		ROAC AA 10 A_Look
		Loop
	See:
		"####" A 0 A_MetaBleed("FlyingBlood")
		ROAC BBCCDDEE 2 A_Chase
		Loop
	Melee:
		//ROAC A 0 A_Jump(200, "TeleStartAway")
		ROAC F 8 A_FaceTarget
		ROAC G 6 A_CustomComboAttack("MetaDoomImpBall", 32, 3 * random(1, 8), "monsters/imp/claw")
		Goto TeleStartAway
	Missile:
		ROAC A 0 A_Jump(128, "TeleStart", "TeleStartAway")
		ROAC F 8 A_FaceTarget
		ROAC G 6 A_CustomComboAttack("MetaDoomImpBall", 32, 3 * random(1, 8), "monsters/imp/claw")
		Goto See
	TeleStart:
		ROAC A 0 A_PlaySound("monsters/implord/jump", CHAN_VOICE)
		ROAC A 2 A_FaceTarget
		ROAC A 2 { ThrustThingZ(0,48,0,0); ThrustThing(angle*256/360, 8, 0, 0); }
		ROAC FH 4
		ROAC A 0 { A_PlaySound("monsters/implord/tele"); A_SpawnItem("MetaImpLordTeleportFog"); }
		ROAC A 0 { A_ChangeFlag("FLOAT", 1); A_ChangeFlag("NOGRAVITY", 1); }
		goto TeleLoop
	TeleStartAway:
		ROAC A 0 A_PlaySound("monsters/implord/jump", CHAN_VOICE)
		ROAC A 2 A_SetAngle(angle-random(150,220))
		ROAC A 2 { ThrustThingZ(0,48,0,0); ThrustThing(angle*256/360, 8, 0, 0); }
		ROAC FH 4
		ROAC A 0 { A_PlaySound("monsters/implord/tele"); A_SpawnItem("MetaImpLordTeleportFog"); }
		ROAC A 0 { A_ChangeFlag("FLOAT", 1); A_ChangeFlag("NOGRAVITY", 1); }
		goto TeleLoopAway
	TeleLoop:
		TNT1 AAAAAAAAAAA 0 A_Chase("", "")
		TNT1 AAAAAAAAAAA 0 A_Wander
		TNT1 A 0 A_Jump(128, "TeleStop")
		loop
	TeleLoopAway:
		TNT1 A 0 A_ChangeFlag("FRIGHTENED", 1)
		TNT1 AAAAAAAAAAA 0 A_Chase("", "")
		TNT1 AAAAAAAAAAA 0 A_Chase("", "")
		TNT1 A 0 A_ChangeFlag("FRIGHTENED", 0)
		TNT1 A 0 A_Jump(128, "TeleStop")
		loop
	TeleStop:
		ROAC A 0 { A_PlaySound("monsters/implord/tele"); A_SpawnItem("MetaImpLordTeleportFog"); }
		ROAC A 0 { A_ChangeFlag("FLOAT", 0); A_ChangeFlag("NOGRAVITY", 0); }
		ROAC H 1 A_CheckSolidFooting("TeleLanding")
		wait
	TeleLanding:
		ROAC A 0 A_Quake (2,8,0,2048,0)
		ROAC A 8
		{
			A_Stop;
			A_PlaySound("bodyfalls/medium");
		}
		ROAC A 0 A_ChangeFlag("DROPOFF", TRUE)
		goto See
	Pain:
		ROAC H 0
		ROAC H 2
		{
			A_ChangeFlag("FRIGHTENED", FALSE);
			A_TakeInventory("ScurredCounter",999);
		}
		ROAC H 2 A_Pain
		Goto See
	Pain.HolyWater:
		ROAC H 3
		ROAC H 3 A_Pain
		Goto Scurred
	Punched:
		ROAC H 3 
		ROAC H 3
		{
			A_ChangeFlag("FRIGHTENED", FALSE);
			A_TakeInventory("ScurredCounter",999);
		}
		ROAC H 12 A_Pain
		Goto See
	Scurred:
		ROAC A 0 A_ChangeFlag("FRIGHTENED", TRUE)
	ScurredLoop:
		ROAC E 0 A_GiveInventory("ScurredCounter", 1)
		ROAC E 2 A_Chase("", "")
		ROAC E 2 A_Chase("", "")
		ROAC B 0 A_SpawnItem("HolySweat",0,54)
		ROAC B 2 A_Chase("", "")
		ROAC B 2 A_Chase("", "")
		ROAC C 2 A_Chase("", "")
		ROAC C 2 A_Chase("", "")
		ROAC C 0 A_SpawnItem("HolySweat",0,54)
		ROAC D 2 A_Chase("", "")
		ROAC D 2 A_Chase("", "")
		ROAC D 0 A_JumpIfInventory("ScurredCounter", 6, "ScurredEnd")
		loop
	ScurredEnd:
		ROAC E 0
		{
			A_ChangeFlag("FRIGHTENED", FALSE);
			A_TakeInventory("ScurredCounter",999);
		}
		goto See
	Death:
		ROAC I 0 A_Jump (128, 2)
		ROAC I 0 A_SetScale(-1,1) // random chance of sprite flipping
		TNT1 A 0 A_SpawnItem("SoulSpawner")
		ROAC I 8 A_GiveToTarget("ScoreItem", 150)
		ROAC J 8 A_Scream
		ROAC K 6
		ROAC L 6 A_NoBlocking
		ROAC M -1 A_PlaySound("bodyfalls/medium")
		Stop
	XDeath:
		TNT1 A 0 A_SpawnItem("SoulSpawner")
		ROAC N 5 A_GiveToTarget("ScoreItem", 150)
		TNT1 A 0 A_SpawnItemEx("MetaGibber",0,0,0,0,0,0,0,SXF_TRANSFERPOINTERS)
		Stop
	Raise:
		ROAC M 0 A_SetScale(1,1)
		ROAC MLKJI 8
		Goto See
	}
}

ACTOR MetaImpLordTeleportFog
{
	+NOBLOCKMAP
	+NOTELEPORT
	+NOGRAVITY
	RenderStyle Add
	States
	{
	Spawn:
		TFOG ABABCDE 3 Bright A_SpawnProjectile("MetaImpLordTeleportFogParticle", 8, 0, random(0,360), CMF_AIMDIRECTION, random(-128,128))
		TFOG FGHIJ 3 Bright
		Stop
	}
}

ACTOR MetaImpLordTeleportFogParticle
{
	+NOBLOCKMAP
	+NOTELEPORT
	+NOGRAVITY
	+MISSILE
	RenderStyle Add
	speed 2
	States
	{
	Spawn:
		TFOG ABCDEFGHIJ 1 Bright
		Stop
	}
}