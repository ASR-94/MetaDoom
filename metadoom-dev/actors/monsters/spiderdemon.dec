ACTOR MetaSpiderdemonBall
{
	Radius 6
	Height 8
	Speed 32
	FastSpeed 48
	Damage 4
	Projectile
	+RANDOMIZE
	RenderStyle Add
	Alpha 1
	decal DoomImpScorch
	States
	{
	Spawn:
		APLS A 0 A_PlaySound ("weapons/plasmarifle/loop", CHAN_BODY, 1.0, 1)
		APLS AB 5 BRIGHT
		Loop
	Death:
		APBX A 0 A_Quake (3,5,0,750,0)
		APBX A 0 A_PlaySound("monsters/spidermastermind/firehit")
		APBX ABCDE 5 BRIGHT
		Stop
	}
}

Actor SpiderDemonChargeupParticle
{
	Radius 3
	Height 3
	Speed 32
	FastSpeed 32
	Damage 0
	Projectile
	+RANDOMIZE
	+NOINTERACTION
	RenderStyle "Add"
	Alpha 1
	scale 0.5

	States
	{
	Spawn:
		TNT1 A 0
		TNT1 A 8
		TNT1 A 0 a_scalevelocity (-0.3) //A_ChangeVelocity(-4, 0, 0, CVF_RELATIVE | CVF_REPLACE)
	FlyForABit:
		SBSH AAAAAAAAAAAAAAAAAAAAAAAAA 1 BRIGHT A_SetScale(scalex + 0.1)
	Death:
		TNT1 A 0
		Stop
	}
}

ACTOR MetaSpiderdemonTKBall
{
	Radius 8
	Height 16
	Speed 8
	FastSpeed 8
	Damage (32)
	Projectile 
	+RANDOMIZE
	-NOGRAVITY	
	+NOEXPLODEFLOOR
	gravity 0.25
	RenderStyle Add
	scale 2
	Alpha 1
	decal CacoScorch
	States
	{
	Spawn:
		BAL2 A 0
		BAL2 A 0 A_PlaySoundEx("monsters/caco/lightningball/loop", "Body", 1)
		BAL2 AB 4 BRIGHT
		Loop
	Death:
		BAL2 C 0 A_PlaySound("monsters/caco/lightningball/hit", CHAN_BODY)
		BAL2 CDE 6 BRIGHT
		Stop
	}
}